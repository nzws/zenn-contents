{
  "name": "@nzws/zenn-articles",
  "packageManager": "yarn@4.3.1",
  "private": true,
  "scripts": {
    "lint:text": "textlint \"**/*.md\"",
    "lint:prettier": "prettier --check --cache .",
    "lint": "yarn lint:text && yarn lint:prettier",
    "format:text": "textlint --fix \"**/*.md\"",
    "format:prettier": "prettier --write --cache .",
    "format": "yarn format:text && yarn format:prettier",
    "prepare": "husky",
    "dev": "zenn preview"
  },
  "devDependencies": {
    "husky": "9.0.11",
    "prettier": "3.3.2",
    "textlint": "14.0.4",
    "textlint-filter-rule-comments": "1.2.2",
    "textlint-rule-ja-hiragana-fukushi": "1.3.0",
    "textlint-rule-ja-hiragana-hojodoushi": "1.1.0",
    "textlint-rule-preset-ja-spacing": "2.4.3",
    "textlint-rule-preset-ja-technical-writing": "10.0.1",
    "textlint-rule-preset-jtf-style": "2.3.14",
    "zenn-cli": "0.1.154"
  }
}
